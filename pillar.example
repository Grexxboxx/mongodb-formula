
  ## minimal pillar data
mongodb:
  server:
    use_repo: True


  ## more advanced pillar data ...

    mongod:
      conf_yaml:
        systemLog:
          logAppend: True
          path: /var/log/mongodb/mongod.log
        storage:
          dbPath: /var/lib/mongo
    mongos:
      conf_yaml:
        systemLog:
          path: /var/log/mongodb/mongos.log
    shell:
      mongorc: /etc/mongorc.js

  bic:
    version: 2.7.0
    use_archive: True
    mongosqld:
      conf_yaml:
        systemLog:
          logAppend: true
          path: /var/log/mongodb/mongosqld.log
        schema:
          path: /etc/mongosqld/schema.drdl
        mongodb:
          net:
            uri: "mongo.example.com:27017"

